<?xml version="1.0" encoding="UTF-8"?>
<glade-catalog name="dfgame" library="libdfgame_application_editor_shared" depends="gtk+" init-function="dfgame_init">
    <glade-widget-classes>
        <glade-widget-class name="DFGameViewport" generic-name="viewport" title="DFGame Viewport" get-type-function="df_game_viewport_get_type" parent="GtkGLArea">
            <properties>
                <property id="update_interval" default="0" name="Update Interval"/>
            </properties>
            <signals>
                <signal id="update_step"/>
            </signals>
        </glade-widget-class>
        <glade-widget-class name="DFGamePropertyGridPropertyGrid" generic-name="propertygrid" title="Property Grid" get-type-function="df_game_property_grid_property_grid_get_type">
            <properties>
                <property id="builder" visible="false"/>
            </properties>
            <signals>
                <signal id="value_changed"/>
            </signals>
        </glade-widget-class>
    </glade-widget-classes>

    <glade-widget-group name="DFGame" title="DFGame Editor Widgets">
        <glade-widget-class-ref name="DFGameViewport"/>
        <glade-widget-class-ref name="DFGamePropertyGridPropertyGrid"/>
    </glade-widget-group>
</glade-catalog>
